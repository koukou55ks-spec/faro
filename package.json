{
  "name": "faro",
  "version": "3.0.0",
  "private": true,
  "description": "Your AI-Powered Financial Operating System",
  "packageManager": "pnpm@9.15.4",
  "scripts": {
    "dev": "pnpm --filter faro-frontend dev",
    "dev:clean": "pnpm dev:kill && pnpm dev",
    "dev:kill": "node -e \"require('child_process').exec(process.platform==='win32'?'netstat -ano | findstr :3000':'lsof -ti:3000 | xargs kill -9',()=>{})\"",
    "build": "pnpm --filter faro-frontend build",
    "lint": "pnpm --filter faro-frontend lint",
    "test": "pnpm --filter faro-frontend test",
    "type-check": "pnpm --filter faro-frontend type-check",
    "clean": "pnpm --filter faro-frontend clean && rm -rf node_modules",
    "security": "pnpm audit --audit-level=moderate",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "validate": "pnpm type-check && pnpm lint && pnpm test",
    "pre-deploy": "pnpm type-check && pnpm lint && pnpm build",
    "db:push": "cd supabase && supabase db push --include-all",
    "db:status": "cd supabase && supabase migration list",
    "tag:create": "node -e \"const v=require('./package.json').version;require('child_process').execSync(`git tag -a v${v} -m 'Release v${v}' && git push origin v${v}`,{stdio:'inherit'})\"",
    "tag:list": "git tag -l -n1"
  },
  "devDependencies": {
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "dependencies": {
    "@types/dompurify": "^3.2.0",
    "isomorphic-dompurify": "^2.28.0"
  }
}
